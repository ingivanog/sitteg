@model GuanajuatoAdminUsuarios.Models.ColoresModel


<section class=" bg-white rounded">
    <div class="row align-items-center justify-content-between px-4 px-md-4 pt-3 pb-2">
        <div class="col-auto pe-0">
            <div class="row align-items-center justify-content-center justify-content-md-start">
                <div class="col-auto pe-0">
                    <i class="icon-editColor h1 colorPrimary"></i>
                </div>
                <div class="col-auto my-3">
                    <h2 class="m-0 h3"><b>Editar color</b></h2>
                </div>
            </div>
        </div>
        <div class="col-auto">
            <div class="row">
                <div class="col-auto my-3">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="bg-light py-1"></div>
        </div>

    </div>
    <div class="row">
        <div class="col-12 my-4">
            <h5 class="px-4"><b>Datos de color</b></h5>
            <h6 class="px-4 text-muted">Completa los datos obligatorios para guardar.</h6>
        </div>
    </div>
    <form id="EliminarColorForm" class="row px-4 mb-4 align-items-end justify-content-center">
        <div class="col-12 col-md-6">
            <div class="controlForm my-3">
                @Html.HiddenFor(m=>m.IdColor)
                @(Html.Kendo().TextBoxFor(t => t.color)
                    .Label(l => l.Content("Nombre <b>(obligatorio)</b>:"))
                    .Placeholder("Ingresa un nueva color")
                    .HtmlAttributes(new { style = "width: 100%" })
                    )

            </div>
        </div>

    </form>
    <div class="row my-4">
        <div class="col-12 col-md-6 mx-md-auto">
            <div class="row justify-content-around">
                <div class="col-auto btnOutline my-2 mx-auto mx-xl-2 p-0">
                    <button type="button" data-bs-dismiss="modal" aria-label="Close">
                        <h6 class="m-0 px-3"><b>Cerrar</b></h6>
                    </button>
                </div>
                <div class="col-auto btnOutline btnOutlinePrimary my-2 mx-auto mx-xl-2 p-0">
                    <div class="controlButton">
                        <button class="btnPrimary px-3" onclick="eliminarColor()">
                            <h5 class="m-0"><b>Eliminar</b></h5>
                        </button>
                    </div>
                </div>
            </div>
        </div>


    </div>
</section>


<script>
    function eliminarColor() {

        var Mydata = $("#EliminarColorForm").serialize();
        console.log(Mydata);
        $('#eliminarColor').modal('hide');
        $('body').removeClass('model-open');
        $('.modal-backdrop').remove();
        $.ajax({
            url: '@Url.Action("EliminarPartialModal")',
            type: 'POST',
            data: Mydata,
            success: function (result) {
                $("#tablaColores").html(result);
            }
        });
    }

</script>
