@model List<TransitoTransporteModel>

<script>
    function ShowGruaPopUp(id) {
        $.ajax({
            url: '@Url.Action("ajax_DetailGruas")',
            type: 'GET',
            data: { id: id },
            contentType: "application/json; charset=utf-8",
            dataType: "html",
            success: function (value) {
                $('#ModalBodyUpdate').html(value);
                $('#modalUpdateLiberacion').modal('show');
            }
        });
    }

</script>

@*<div class="row justify-content-between mb-1 titleCustom">*@
<div class="row mb-1 titleCustom">
    <div class="col-12 col-md-auto mt-4 mb-2">
        <h5 class="px-4"><b>Listado de Tránsito/Transporte</b></h5>
        @*<h6 class="px-4 text-muted">Edita los datos de vehículo.</h6>*@
    </div>
</div>
<br />
<br />

<div class="row">
    @*<column template="<button data-bs-toggle=modal data-bs-target=\#editVehiculo class='w-100 btn'><h6 class='m-0 colorPrimary'><i class='icon-edit me-2'></i><b>Editar</b></h6></button>" width="100" />*@
    <div class="col-12 mb-4 px-4 rounded gridCustom">
        @(Html.Kendo().Grid(Model)
            .Name("Grid")
            .Columns(columns =>
            {
                columns.Bound(p => p.IdDeposito).Title("Num.").Width(70);
                columns.Bound(p => p.FolioSolicitud).Title("Fecha_evento/Folio_Solicitud/Folio_Infracción").Width(150);
                columns.Bound(p => p.Serie).Title("Vehículo").Width(150);
                columns.Bound(c => c.FechaIngreso).Format("{0:dd/MM/yyyy}").Width(90);
                columns.Bound(c => c.FechaLiberacion).Format("{0:dd/MM/yyyy}").Width(90);
                columns.Bound(c => c.pension).Title("Pension").Width(100);
                columns.Bound(c => c.Grua).Title("Grúa").Width(90);
                columns.Bound(p => p.IdGrua).ClientTemplate(
                "<button onclick=\"ShowGruaPopUp('#= IdGrua #')\" class='w-100 btn'><h6 class='m-0 colorPrimary'><i class='icon-search me-2'></i></h6></button>"
                ).Title("Detalle Grúa(s)").Sortable(false).Width(70);

                columns.Bound(c => c.EstatusVehiculo).Title("Estatus Vehículo???").Width(90);

                columns.Bound(p => p.IdGrua).ClientTemplate(
                "<button onclick=\"ShowGruaPopUp('#= IdGrua #')\" class='w-100 btn'><h6 class='m-0 colorPrimary'><i class='icon-edit me-2'></i></h6></button>"
                ).Title("Editar").Sortable(false).Width(70);

                columns.Bound(p => p.IdDeposito).ClientTemplate(
                "<button onclick=\"ShowGruaPopUp('#= IdGrua #')\" class='w-100 btn'><h6 class='m-0 colorPrimary'><i class='icon-delete me-2'></i></h6></button>"
                ).Title("Eliminar").Sortable(false).Width(70);

                columns.Bound(p => p.IdDeposito).ClientTemplate(
                "<button onclick=\"ShowGruaPopUp('#= IdGrua #')\" class='w-100 btn'><h6 class='m-0 colorPrimary'><i class='file-pdf me-2'></i></h6></button>"
                ).Title("Exportar").Sortable(false).Width(70);
               
            }).HtmlAttributes(new { style = "height:350" })
            @*.Pageable(pager => pager.AlwaysVisible(true).PageSizes(new int[] { 5, 10, 20, 100 }))*@
            .Pageable(pager => pager.Input(true))
            .Sortable()
            .Scrollable(scr => scr.Height(350))
            .DataSource(dataSource => dataSource
            .Ajax()
            .ServerOperation(false)
            )
            )
    </div>

</div>

@*Modal*@
<div class="modal fade modalCustom" id="modalUpdateLiberacion" tabindex="-1" aria-labelledby="editVehiculo" aria-hidden="true">
    <div class="modal-dialog modal-xl boxShadow modal-dialog-centered">
        <div class="modal-content">

            <section class=" bg-white rounded">
                <div class="row align-items-center justify-content-between px-4 px-md-4 pt-3 pb-2">
                    <div class="col-auto pe-0">
                        <div class="row align-items-center justify-content-center justify-content-md-start">
                            <div class="col-auto pe-0">
                                <i class="icon-edit-car h1 colorPrimary"></i>
                            </div>
                            <div class="col-auto my-3">
                                <h2 class="m-0 h3"><b>Liberación de vehículo</b></h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-auto">
                        <div class="row">
                            <div class="col-auto my-3">
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="bg-light py-1"></div>
                    </div>

                </div>

                <div class="row align-items-end">
                    <div class="col-12 col-lg-6 my-4">
                        <h5 class="px-4"><b>Propietario:</b></h5>
                    </div>
                </div>


                <div class="modal-body" id="ModalBodyUpdate">
                </div>

            </section>
        </div>
    </div>
</div>