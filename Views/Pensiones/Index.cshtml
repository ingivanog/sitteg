@model PensionesBusquedaModel
@{

}

<head>
    <script>
        function submitSearch() {
            var Mydata = $("#frmSearch").serialize();
            //console.log(Mydata);
            $.ajax({
                url: '@Url.Action("ajax_BuscarPensiones")',
                type: 'POST',
                data: Mydata,
                success: function (result) {
                    $("#listadoPensiones").html(result);
                }
            });
        }


        //function ShowCreatePopUp() {
        //    //$('#hdnIdDeposito').val(Id);
        //    $('#myCreateModal').modal('show');
        //}


        function ShowCreatePopUp() {
            $.ajax({
                url: '@Url.Action("CreatePartial")',
                type: 'POST',
                contentType: "application/json; charset=utf-8",
                dataType: "html",
                success: function (value) {
                    $('#ModalBodyCreate').html(value);
                    $('#myCreateModal').modal('show');
                }
            });
        }


    </script>
</head>


<div class="mainContainer bg-light">
    <section class="mx-md-3 mx-lg-4 mx-xl-5 bg-white boxShadow my-5 rounded">
        <div class="row align-items-center justify-content-between px-4 px-md-4 pt-3 pb-2">
            <div class="col-12 col-md-6 col-lg-5 col-xl-auto">
                <div class="row align-items-center justify-content-center justify-content-md-start">
                    <div class="col-auto">
                        <i class="icon-edit-car h1 colorPrimary"></i>
                    </div>
                    <div class="col-auto my-3">
                        <h2 class="m-0 h3"><b>Pensiones</b></h2>
                    </div>
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-12">
                <div class="bg-light py-1"></div>
            </div>
        </div>
        <div class="col-12 col-md-auto mt-4 mb-2">
            <h5 class="px-4"><b>Busqueda de Pensiones</b></h5>
            <h6 class="px-4 text-muted">Realiza una búsqueda personalizada de Pensiones.</h6>
        </div>
        <form id="frmSearch" class="row px-4 mb-4 align-items-end" method="post">

            <div class="col-12 col-md-6 col-lg-4">
                <div class="controlForm mb-3">
                    <span>
                        @(Html.Kendo().TextBoxFor(t => t.pension)
                            .Label(l => l.Content("Nombre:"))
                            .Placeholder("Ingresa nombre")
                            .HtmlAttributes(new { style = "width: 100%" })
                            )
                    </span>
                </div>
            </div>


            <div class="col-12 col-md-6 col-lg-4">
                <div class="controlForm mb-3">
                    <label>Delegación:</label>
                    <span>
                        @(Html.Kendo().DropDownListFor(d => d.IdDelegacion)
                            .DataTextField("Text")
                            .DataValueField("Value")
                            .OptionLabel("Seleccione Delegación...")
                            .HtmlAttributes(new { style = "width:100%;" })
                            .Filter(FilterType.Contains)
                            .DataSource(source =>
                            {
                                source.Read(read =>
                                {
                                    read.Action("Delegacion_Read", "Pensiones");
                                });
                            }))
                    </span>
                </div>
            </div>

            <div class="col-12 col-md-6 col-lg-2">
                <div class="controlButton my-3">
                    <button class="btnPrimary" type="button" onclick="submitSearch()">  <h5 class="m-0"><b>Buscar</b></h5></button>

                </div>
            </div>

            <div class="col-12 col-md-6 col-lg-2">
                <div class="controlButton my-3">

                    <button type="button" onclick="ShowCreatePopUp()" class='btnPrimary'><h5 class="m-0"><i class='icon-data m-0'></i>&nbsp;&nbsp; <b>Agregar</b></h5></button>
                </div>
            </div>

        </form>
        @*//Aqui*@


        <div id="listadoPensiones">
            <partial name="_ListadoPensiones" model="Model.ListPensiones" />
        </div>
    </section>
</div>



<div class="modal fade modalCustom" id="myCreateModal" tabindex="-1" aria-labelledby="editVehiculo" aria-hidden="true">
    <div class="modal-dialog modal-xl boxShadow modal-dialog-centered">
        <div class="modal-content">
            <section class=" bg-white rounded">                
                <div class="row">
                    <div class="col-12">
                        <div class="bg-light py-1"></div>
                    </div>

                </div>

                <div class="modal-body" id="ModalBodyCreate">
                   
                </div>
            

            </section>
        </div>
    </div>
</div>