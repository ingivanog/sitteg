@model List<GuanajuatoAdminUsuarios.Models.OficialesModel>
@*RazorCoder*@


<div class="row minH100">
    <nav class="navPrincipal">nav</nav>
    <div class="mainContainer bg-light">

        <section class="mx-md-3 mx-lg-4 mx-xl-5 bg-white boxShadow my-5 rounded">
            <div class="row align-items-center justify-content-between px-4 px-md-4 pt-3 pb-2">
                <div class="col-12 col-md-6 col-lg-5 col-xl-auto">
                    <div class="row align-items-center justify-content-center justify-content-md-start">
                        <div class="col-auto">
                            <i class="icon-dependencia h1 colorPrimary"></i>
                        </div>
                        <div class="col-auto my-3">
                            <h2 class="m-0 h3"><b>Catalogo de oficiales</b></h2>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-7 col-xl-auto">
                    <div class="row">
                        <div class="col-auto btnOutline btnOutlinePrimary my-2 mx-auto mx-xl-2 p-0">
                            <button href="#" id="btnNuevaDep" onclick="mostrarModal()"> <i class="icon-addMarca h5 mb-0 me-2"></i><b>Agregar nueva oficial</b></button>

                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="bg-light py-1"></div>
                </div>
            </div>
            <div class="row justify-content-between mb-1 titleCustom">
                <div class="col-12 col-md-auto mt-4 mb-2">
                    <h5 class="px-4"><b>Edita o elimina los registros de oficales.</b></h5>
                </div>
            </div>
        </section>
        <div class="row">
            <div id="tablaDependencias">
                <partial name="_ListaOficiales" model="Model" />
                @*@Html.Partial("_ProductModelList", Model)*@
                <div class="row">
                    <div class="col-12">
                        <div class="tabCustomEnd"></div>
                    </div>
                </div>

            </div>

            <div class="tab-pane tabCustomConteiner fade" id="delegaciones" role="tabpanel" aria-labelledby="delegaciones-tab">
                <div class="row p-4 align-items-center justify-content-around">
                    <div class="col-auto btnToggleCustom my-2">
            </div>
        </div>
    </div>

    <div class="modal fade modalCustom" id="addDependencia" tabindex="-1" aria-labelledby="addDependenciaLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Registrar Oficial</h4>
                    @* <button type="button" class="close" id="hidden-cancel" data-dismiss="modal" aria-label="close">
                    <span aria-hidden="true">&times;</span>
                    </button>*@

                </div>
                <div class="modal-body" id="ModalBodyCreate">
                </div>
                @*  <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>*@
            </div>

        </div>
    </div>
</div>

@*<script src="~/jquery-ajax-unobtrusive/dist/jquery.unobtrusive-ajax.min.js"></script>*@
<script>
    function mostrarModal() {
        $.ajax({
            url: '@Url.Action("AgregarParcial")',
            type: 'POST',
            contentType: "application/json; charset=utf-8",
            dataType: "html",
            success: function (data) {
                $('#ModalBodyCreate').html(data);
                $('#addDependencia').modal('show');
            }
        });
    }


</script>
